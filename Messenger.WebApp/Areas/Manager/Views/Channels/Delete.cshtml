@model ChannelDto

@{
    ViewData["Title"] = "Delete Channel";
}

<h1>Delete Channel</h1>

<h3>Are you sure you want to delete this channel?</h3>
<div>
    <h4>@Model.ChannelName</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.ChannelName</dd>
        <dt class="col-sm-2">Title</dt>
        <dd class="col-sm-10">@Model.ChannelTitle</dd>
        <dt class="col-sm-2">Created At</dt>
        <dd class="col-sm-10">@Model.CreateDate.ToString("yyyy-MM-dd")</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="ChannelId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>