@model ChannelDetailsViewModel

@{
    ViewData["Title"] = "Channel Details";
}

<h1>Channel Details</h1>

<div>
    <h4>@Model.Name</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>
        <dt class="col-sm-2">Title</dt>
        <dd class="col-sm-10">@Model.Title</dd>
        <dt class="col-sm-2">Creator User ID</dt>
        <dd class="col-sm-10">@Model.CreatorUserId</dd>
        <dt class="col-sm-2">Created At</dt>
        <dd class="col-sm-10">@Model.CreatedAt.ToString("yyyy-MM-dd")</dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Members" asp-route-id="@Model.Id">Members</a> |
    <a asp-action="Index">Back to List</a>
</div>