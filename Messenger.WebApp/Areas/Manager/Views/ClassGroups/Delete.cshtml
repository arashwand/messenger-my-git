@model ClassGroupDto

@{
    ViewData["Title"] = "Delete Class Group";
}

<h1>Delete Class Group</h1>

<h3>Are you sure you want to delete this class group?</h3>
<div>
    <h4>@Model.LevelName</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Level Name</dt>
        <dd class="col-sm-10">@Model.LevelName</dd>
        <dt class="col-sm-2">Class Timing</dt>
        <dd class="col-sm-10">@Model.ClassTiming</dd>
        <dt class="col-sm-2">Active</dt>
        <dd class="col-sm-10">@Model.IsActive</dd>
        <dt class="col-sm-2">Sessions Left</dt>
        <dd class="col-sm-10">@Model.LeftSes</dd>
        <dt class="col-sm-2">End Date</dt>
        <dd class="col-sm-10">@(Model.EndDate.ToString("yyyy-MM-dd") ?? "N/A")</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="ClassId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>