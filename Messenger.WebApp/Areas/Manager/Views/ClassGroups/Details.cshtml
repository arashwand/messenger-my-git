@model ClassGroupDto

@{
    ViewData["Title"] = "Class Group Details";
}

<h1>Class Group Details</h1>

<div>
    <h4>@Model.LevelName</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Level Name</dt>
        <dd class="col-sm-10">@Model.LevelName</dd>
        <dt class="col-sm-2">Class Timing</dt>
        <dd class="col-sm-10">@Model.ClassTiming</dd>
        <dt class="col-sm-2">Active</dt>
        <dd class="col-sm-10">@Model.IsActive</dd>
        <dt class="col-sm-2">Sessions Left</dt>
        <dd class="col-sm-10">@Model.LeftSes</dd>
        <dt class="col-sm-2">End Date</dt>
        <dd class="col-sm-10">@(Model.EndDate.ToString("yyyy-MM-dd") ?? "N/A")</dd>
        <dt class="col-sm-2">Teacher User ID</dt>
        <dd class="col-sm-10">@Model.TeacherUserId</dd>
        <dt class="col-sm-2">Created At</dt>
        @* <dd class="col-sm-10">@Model.CreatedAt.ToString("yyyy-MM-dd")</dd> *@
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ClassId">Edit</a> |
    <a asp-action="Members" asp-route-id="@Model.ClassId">Members</a> |
    <a asp-action="Index">Back to List</a>
</div>