@model ClassGroupDto

@{
    ViewData["Title"] = "Edit Class Group";
}

<h1>Edit Class Group</h1>

<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="ClassId" />
    <div class="form-group">
        <label asp-for="TeacherUserId" class="control-label"></label>
        <input asp-for="TeacherUserId" class="form-control" />
        <span asp-validation-for="TeacherUserId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="LevelName" class="control-label"></label>
        <input asp-for="LevelName" class="form-control" />
        <span asp-validation-for="LevelName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ClassTiming" class="control-label"></label>
        <input asp-for="ClassTiming" class="form-control" />
        <span asp-validation-for="ClassTiming" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="IsActive" class="control-label"></label>
        <input asp-for="IsActive" type="checkbox" class="form-check-input" />
        <span asp-validation-for="IsActive" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="LeftSes" class="control-label"></label>
        <input asp-for="LeftSes" type="number" class="form-control" />
        <span asp-validation-for="LeftSes" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="EndDate" class="control-label"></label>
        <input asp-for="EndDate" type="date" class="form-control" />
        <span asp-validation-for="EndDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}