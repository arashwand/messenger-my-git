@using Messenger.Tools
@model IEnumerable<UserDto>

@{
    ViewData["Title"] = "Manage Users";
}

<h1>Manage Users</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New User</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>User Id</th>
            <th>Full Name</th>
            <th>Role Fa Name</th>
            <th>Role Name</th>
            <th>Department</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserId</td>
                <td>@user.NameFamily</td>
                <td>@user.RoleFaName</td>
                <td>@user.RoleName</td>
                <td>@user.DeptName</td>
                <td>
                    <a asp-action="Details" asp-route-id="@user.UserId">Details</a> |
                    <a asp-action="Edit" asp-route-id="@user.UserId">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@user.UserId">Delete</a>
                    @if(user.RoleName == ConstRoles.Teacher)
                    {
                       <span>|</span> <a asp-controller="ClassGroups" asp-action="Taught" asp-route-id="@user.UserId">Taught ClassGroups</a>
                    }else if(user.RoleName == ConstRoles.Student){
                        <span>|</span> <a asp-controller="ClassGroups" asp-action="ShowUserClassGroups" asp-route-id="@user.UserId">ClassGroups</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>