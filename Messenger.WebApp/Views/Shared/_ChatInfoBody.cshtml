            </a>

            <div class="chat-info-group-body collapse show" id="participants-list">
                <div class="chat-info-group-content list-item-has-padding">
                    <!-- List Group Start -->
                    <ul class="list-group list-group-flush" id="user-list-container">

                        @foreach (var item in Model.Members)
                        {

                            <li class="list-group-item">
                                <div class="media align-items-center">
                                    <div class="avatar avatar-offline mr-2 user-status-icon" data-user-id="@item.UserId" data-group-id="@Model.ClassGroupId" data-group-type="@Model.GroupType">
                                        <img src="../assets/media/avatar/@item.ProfilePicName" alt="">
                                    </div>

                                    <div class="media-body">
                                        <h6 class="text-truncate">
                                            <a href="#" class="text-reset">@item.NameFamily</a>
                                        </h6>
                                        <p class="text-muted mb-0">@item.RoleFaName</p>
                                    </div>

                                    <div class="media-options ml-1">
                                        <div class="dropdown">
                                            <button class="btn btn-secondary btn-icon btn-minimal btn-sm text-muted" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
